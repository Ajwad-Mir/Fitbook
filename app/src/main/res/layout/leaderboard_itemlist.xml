<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="8dp"
    app:cardBackgroundColor="@color/teal_700"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp"
    app:contentPadding="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/UserName_Input"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/user_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/TotalDistance_Input"
            app:layout_constraintEnd_toStartOf="@+id/UserName_Output"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TotalDistance_Input"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/total_distance"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/TotalDistance_Output"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserName_Input" />

        <TextView
            android:id="@+id/UserName_Output"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/dummy_creator"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/TotalDistance_Output"
            app:layout_constraintStart_toEndOf="@+id/UserName_Input"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TotalDistance_Output"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/dummy_distance"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/TotalDistance_Input"
            app:layout_constraintTop_toBottomOf="@+id/UserName_Output" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>